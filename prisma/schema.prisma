datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id_user     Int       @id @default(autoincrement())
  nome        String
  email       String     @unique
  senha       String
  tipo_user   TipoUser   @default(COMUM)
  retiradas   RetiradaEmprestimo[] @relation("RetiranteRelation")
  entregas    RetiradaEmprestimo[] @relation("EntregadorRelation")
  recebimentos RetiradaEmprestimo[] @relation("RecebedorRelation")

  id_pastoral     Int?
  pastoral        Pastoral? @relation(fields: [id_pastoral], references: [id_pastoral])
  funcao_pastoral FuncaoPastoral?
  
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

}

model Bem {
  id_bem      Int        @id @default(autoincrement())
  nome_bem    String
  estado      EstadoBem  @default(USADO)
  foto        String?
  valor       Decimal?   @db.Decimal(10, 2)
  codigo      String     @unique
  emprestimos RetiradaEmprestimo[]
  marca       String?
  modelo      String?
  local       LocalBem   @default(MATRIZ)
}

model Pastoral {
  id_pastoral       Int        @id @default(autoincrement())
  nome_pastoral     String
  emprestimos       RetiradaEmprestimo[]
  membros           Usuario[]
}

model RetiradaEmprestimo {
id                Int        @id @default(autoincrement())
  id_bem            Int
  id_retirante      Int
  id_entregador     Int?
  id_recebedor      Int?
  id_pastoral       Int
  data_retirada     DateTime
  data_entrega      DateTime?
  estado_retirada   EstadoBem
  estado_devolucao  EstadoBem?
  descricao_motivo_retirada String?
  justificativa_avaria String?
  nome_responsavel_devolucao String?
  email_responsavel_devolucao String?
  nome_retirante String?
  email_retirante   String
  data_estimada_devolucao DateTime?
  finalidade_uso    FinalidadeUso @default(MATRIZ)

  // Relacionamentos
  bem         Bem        @relation(fields: [id_bem], references: [id_bem])
  pastoral    Pastoral   @relation(fields: [id_pastoral], references: [id_pastoral])
  retirante   Usuario    @relation("RetiranteRelation", fields: [id_retirante], references: [id_user])
  entregador  Usuario?   @relation("EntregadorRelation", fields: [id_entregador], references: [id_user])
  recebedor   Usuario?   @relation("RecebedorRelation", fields: [id_recebedor], references: [id_user])
}

// -----------------------------------------------
// ENUMS
// -----------------------------------------------

enum TipoUser {
  ADM
  COMUM
}

enum EstadoBem {
  NOVO
  USADO
  QUEBRADO
  EM_MANUTENCAO
}

enum LocalBem {
  MATRIZ
  CAPELA
}

enum FinalidadeUso {
  MATRIZ
  CAPELA
  PESSOAL
}

enum FuncaoPastoral {
  COORDENADOR
  VICE_COORDENADOR
}
